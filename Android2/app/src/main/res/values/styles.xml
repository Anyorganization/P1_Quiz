<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    //////

    <style name="Sphinx" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textAppearance">@style/DialogWindowTitle</item>
    </style>

    <style name="DialogWindowTitle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/orange</item>
    </style>


    /////


    //////


    <item name="transparent" type="color">#7d000000</item>
    <item name="black" type="color">#000000</item>
    <item name="skyBlue" type="color">#43a4d9</item>
    <item name="orange" type="color">#ff9100</item>
    <item name="gray" type="color">#a3a3a3</item>

    <!-- Nuevos colores -->
    <item name="darkBlack" type="color">#06050e</item>
    <item name="darkBlue" type="color">#3c33a5</item>
    <item name="lightBlue" type="color">#0777f4</item>
    <item name="lightWhite" type="color">#e3f1fd</item>

    <style name="LightTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/lightBlue</item>
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="android:textColor">@color/darkBlack</item>
        <item name="android:windowBackground">@drawable/light_bg</item>
        <item name="android:colorBackground">@color/lightBlue</item>
        <item name="colorAccent">@color/orange</item>
        <item name="android:fontFamily">@font/londontube</item>
        <item name="buttonStyle">@style/btn</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/darkBlack</item>
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:windowBackground">@drawable/dark_bg</item>
        <item name="android:colorBackground">@color/darkBlack</item>
        <item name="colorAccent">@color/orange</item>
        <item name="android:textColorPrimary">@color/darkBlue</item>
        <item name="android:fontFamily">@font/londontube</item>
        <item name="buttonStyle">@style/btn</item>
    </style>

    <style name="StartTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/lightBlue</item>
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:windowBackground">@drawable/start_bg</item>
        <item name="android:colorBackground">@color/lightBlue</item>
        <item name="colorAccent">@color/orange</item>
        <item name="android:textColorPrimary">@color/darkBlack</item>
        <item name="android:fontFamily">@font/londontube</item>
        <item name="buttonStyle">@style/btn</item>
    </style>

    <style name="grayTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/gray</item>
        <item name="android:windowBackground">@color/gray</item>
        <item name="colorAccent">@color/orange</item>
        <item name="android:textAppearanceMedium">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>


    </style>

    <style name="btn" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/orange</item>
        <item name="android:textColor">@color/darkBlack</item>
        <item name="android:radius">20dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
