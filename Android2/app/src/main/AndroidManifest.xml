<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lospros.com.androidquiz">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/quiz_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/quiz_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity android:name=".QuizActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StartMenu"
            android:theme="@style/StartTheme"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SettingsActivity" android:screenOrientation="portrait" />
        <activity android:name=".EndOfQuiz" android:screenOrientation="portrait"/>
        <activity android:name=".ScoresActivity" android:screenOrientation="portrait" />
        <activity android:name=".ProfilesMenu" android:screenOrientation="portrait"/>
        <activity android:name=".CreateProfileActivity" android:screenOrientation="portrait"/>
        <activity android:name=".ProfileActivity" android:screenOrientation="portrait"/>
    </application>

</manifest>